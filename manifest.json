{
  "manifest_version": 2,

  "name": "Jist!",
  "author":  "Nicholas Young",
  "description": "Easily summarize any block of text with Jist!",
  "version": "1.0.2",

  "background": {
    "scripts": ["background.js"]
  },

  "icons": {
    "16": "icon1616.png",
    "128": "icon128.png"
  },

  "browser_action": {
    "default_icon": "icon1616.png",
    "default_title": "Highlight text on any webpage and click this icon to get the Jist!"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["jquery-ui.css", "jist_style.css"],
    "js": ["jquery.js", "jquery-ui.js", "content.js"]
  }],

  "permissions": [
    "http://*/*",
    "https://*/*",
    "activeTab",
    "tabs",
    "contextMenus"
  ],

  "web_accessible_resources": [
    "images/*.png"
  ]
}
